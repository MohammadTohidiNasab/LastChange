@model Divar.Models.AssignRoleViewModel

<h2>نسبت دادن نقش به کاربر</h2>

<form asp-action="AssignRole" method="post">
    <div>
        <label for="userId">انتخاب کاربر:</label>
        <select id="userId" name="UserId" required>
            @foreach (var user in Model.Users)
            {
                <option value="@user.Value">@user.Text</option>
            }
        </select>
    </div>

    <div>
        <label for="roleName">انتخاب نقش:</label>
        <select id="roleName" name="SelectedRoles" required multiple>
            @foreach (var role in Model.AvailableRoles)
            {
                <option value="@role">@role</option>
            }
        </select>
    </div>

    <button type="submit">نسبت دادن نقش</button>
</form>

@if (!ViewData.ModelState.IsValid)
{
    <div>
        <h4>خطاها:</h4>
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}
